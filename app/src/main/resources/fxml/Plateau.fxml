<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox prefHeight="720" prefWidth="1280" xmlns="http://javafx.com/javafx/21"
   xmlns:fx="http://javafx.com/fxml/1" fx:controller="karmaka.controllers.PlateauController">
   <children>
      <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0"
         VBox.vgrow="ALWAYS">
         <children>
            <ImageView fitHeight="720" fitWidth="1280" layoutX="0" layoutY="0">
               <image>
                  <Image url="@/images/plateau.png" />
               </image>
            </ImageView>

            <!-- Vie Future Adversaire -->
            <ImageView fx:id="adversaireVieFuture" fitHeight="160" fitWidth="115" layoutX="200"
               layoutY="16">
            </ImageView>
            <Text fx:id="adversaireVieFutureQte" layoutX="161.0" layoutY="51.0" strokeWidth="0.0" text="0">
               <font>
                  <Font size="32.0" />
               </font>
            </Text>

            <!-- Oeuvres Adversaire -->
            <ImageView fx:id="adversaireOeuvres" fitHeight="160" fitWidth="115" layoutX="820"
               layoutY="16">
            </ImageView>

            <!-- Deck Adversaire -->
            <ImageView fx:id="adversaireDeck" fitHeight="160" fitWidth="115" layoutX="965"
               layoutY="16">
            </ImageView>
            <Text fx:id="adversaireDeckQte" layoutX="1092.0" layoutY="51" strokeWidth="0.0" text="0">
               <font>
                  <Font size="32.0" />
               </font>
            </Text>

            <!-- Bouton Echelle -->
            <Button onMouseClicked="#handleEchelleButton" layoutX="100" layoutY="237"
               mnemonicParsing="false" prefHeight="70" prefWidth="160" text="Echelle" />

            <!-- Source -->
            <ImageView fx:id="source" fitHeight="160" fitWidth="115" layoutX="415" layoutY="192">
            </ImageView>
            <Text fx:id="sourceQte" layoutX="365.0" layoutY="227.0" strokeWidth="0.0" text="0">
               <font>
                  <Font size="32.0" />
               </font>
            </Text>

            <!-- Fosse -->
            <ImageView fx:id="fosse" fitHeight="160" fitWidth="115" layoutX="550" layoutY="192">
            </ImageView>
            <Text fx:id="fosseQte" layoutX="675" layoutY="227" strokeWidth="0.0" text="0">
               <font>
                  <Font size="32.0" />
               </font>
            </Text>

            <!-- Deck -->
            <ImageView onMouseClicked="#handleDeck" fx:id="deck" fitHeight="160" fitWidth="115"
               layoutX="200" layoutY="368">
            </ImageView>
            <Text fx:id="deckQte" layoutX="161.0" layoutY="403" strokeWidth="0.0" text="0">
               <font>
                  <Font size="32.0" />
               </font>
            </Text>

            <!-- Oeuvres -->
            <ImageView fx:id="oeuvres" fitHeight="160" fitWidth="115" layoutX="345" layoutY="368">
            </ImageView>

            <!-- Vie Future -->
            <ImageView fx:id="vieFuture" fitHeight="160" fitWidth="115" layoutX="965" layoutY="368">
            </ImageView>
            <Text fx:id="vieFutureQte" layoutX="1092.0" layoutY="403" strokeWidth="0.0" text="0">
               <font>
                  <Font size="32.0" />
               </font>
            </Text>

            <!-- Main -->
            <ImageView fx:id="main" fitHeight="160" fitWidth="115" layoutX="425" layoutY="544">
            </ImageView>
         </children>
      </AnchorPane>
   </children>
</VBox>